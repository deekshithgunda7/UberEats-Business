@model Driver
@{
    ViewData["Title"] = "Home Page";
}
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>

<div class="col-sm-12">
    <form method="post" asp-action="SaveDriver" asp-controller="Home">
        <div class="col-sm-12 d-flex flex-column">
            <label>First Name</label>
            <input class="form-control" type="text" asp-for="FirstName" name="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>

        </div>
        <div class="col-sm-12 d-flex flex-column">
            <label>Last Name</label>
            <input class="form-control" type="text" asp-for="LastName" name="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>

        </div>

        <div class="col-sm-12 d-flex flex-column">
            <label>Dateof Birth(MM/DD/YY)</label>
            <input class="form-control" id="DOB" asp-for="DOB" type="date" name="DOB" />
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>
        <div class="col-sm-12 d-flex flex-column">
            <label>Social Security Number</label>
            <input class="form-control" asp-for="SSN" type="text" name="SSN" />
            <span asp-validation-for="SSN" class="text-danger"></span>

        </div>
        <div class="col-sm-12 d-flex flex-column">
            <label>Address</label>
            <input class="form-control" type="text" asp-for="Address" name="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>

        </div>
        <div class="col-sm-12 d-flex flex-column">
            <label>Post Code</label>
            <input class="form-control" asp-for="PostCode" type="text" name="PostCode" />
            <span asp-validation-for="PostCode" class="text-danger"></span>

        </div>
        <div class="col-sm-12 d-flex flex-column">
            <label>Email</label>
            <input class="form-control" type="text" asp-for="Email" name="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>
        <div class="col-sm-12 d-flex flex-column">
            <label>Phone</label>
            <input class="form-control" type="text" asp-for="Phone" name="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>

        </div>
        <div class="col-sm-12 d-flex flex-column mb-2">
            <label>Driver License Number</label>
            <input class="form-control" type="text" asp-for="DLNumber" name="DLNumber" />
            <span asp-validation-for="DLNumber" class="text-danger"></span>

        </div>
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Add</button>
            &nbsp;
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>